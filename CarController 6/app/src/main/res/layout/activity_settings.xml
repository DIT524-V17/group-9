<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout
    android:background="@drawable/googra"
    tools:context="com.group9.carcontroller.MainActivity"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/activity_login"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/passwordID"
        android:textColor="@android:color/background_light"
        android:textAlignment="viewStart"
        android:hint="Password"
        android:ems="10"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/confirmPasswordID"
        android:textColor="@android:color/background_light"
        android:textAlignment="viewStart"
        android:hint="Confirm Password"
        android:ems="10"/>

    <Button
        android:background="@drawable/custom_btn_blue"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/savePWID"
        android:text="Save password"
        style="@style/CustomButtonText"/>

    <Button
        android:background="@drawable/custom_btn_blue"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/turnOffPWID"
        android:text="Turn off password"
        style="@style/CustomButtonText"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/textView3"
        android:textAlignment="center"
        android:text="Make a random password"
        android:textSize="24sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:gravity="bottom"
        android:layout_weight="0.59"/>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

    <ToggleButton
        android:background="@drawable/custom_btn_blue"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/lettersID"
        android:text="ToggleButton"
        style="@style/CustomButtonText"
        android:layout_weight="1"
        android:textOn="Letters: Yes"
        android:textOff="Letters: No"/>

    <ToggleButton
        android:background="@drawable/custom_btn_blue"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/numbersID"
        android:text="ToggleButton"
        style="@style/CustomButtonText"
        android:layout_weight="1"
        android:textOn="Numbers: Yes"
        android:textOff="Numbers: No"/>

</LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

    <Button
        android:background="@drawable/custom_btn_blue"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/charID"
        android:text="+Chars: 4"
        style="@style/CustomButtonText"
        android:layout_weight="1"/>

    <Button
        android:background="@drawable/custom_btn_blue"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/charID2"
        android:text="-Chars: 4"
        style="@style/CustomButtonText"
        android:layout_weight="1"/>

</LinearLayout>

    <Button
        android:background="@drawable/custom_btn_blue"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/randomPasswordID"
        android:text="Generate password"
        style="@style/CustomButtonText"/>

</LinearLayout>

</RelativeLayout>