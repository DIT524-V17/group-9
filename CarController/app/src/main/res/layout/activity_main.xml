<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.group9.carcontroller.MainActivity"
    android:background="@drawable/googra">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="137dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:weightSum="1"
    android:id="@+id/linearLayout">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:text="Get paired devices"
        android:background="@drawable/custom_btn_blue"
        style="@style/CustomButtonText"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Pair new device"
        android:id="@+id/pair"
        android:background="@drawable/custom_btn_blue"
        style="@style/CustomButtonText"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7.83">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView">

    </ListView>

    </ScrollView>
</LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout" />
</RelativeLayout>
